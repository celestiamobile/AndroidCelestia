<resources>
    <style name="DefaultThemeBase" parent="@style/Theme.Material3.Dark.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="DefaultTheme" parent="DefaultThemeBase"/>

    <style name="Container">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ListItem" parent="Container">
        <item name="android:background">@drawable/ripple_background</item>
    </style>

    <style name="ListItemGrouped" parent="Container">
        <item name="android:background">@drawable/ripple_grouped_background</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="BackgroundElevated">
        <item name="android:background">@color/colorBackgroundElevated</item>
    </style>

    <style name="SecondaryBackground">
        <item name="android:background">@color/colorSecondaryBackground</item>
    </style>

    <style name="SecondaryBackgroundElevated">
        <item name="android:background">@color/colorSecondaryBackgroundElevated</item>
    </style>

    <style name="ControlViewBackground">
        <item name="android:background">@drawable/control_view_background</item>
    </style>

    <style name="ButtonBackground">
        <item name="android:background">@drawable/ripple_button_background</item>
    </style>

    <style name="DimmingBackground">
        <item name="android:background">@color/colorDimmingBackground</item>
    </style>

    <style name="Separator">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:background">@color/colorSeparator</item>
    </style>

    <style name="Image">
        <item name="android:tint">@color/colorLabel</item>
    </style>

    <style name="SecondaryImage">
        <item name="android:tint">@color/colorSecondaryLabel</item>
    </style>

    <style name="Accessory">
        <item name="android:tint">@color/colorTertiaryLabel</item>
    </style>

    <style name="PrimaryLabel">
        <item name="android:textColor">@color/colorLabel</item>
    </style>

    <style name="ActionButtonLabel" parent="PrimaryLabel">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>

    <style name="HelpText" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="LoadingText" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
    </style>

    <style name="CaptionText" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="PrimaryListItemLabel" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SecondaryListItemLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="LargeTitleLabel" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineLarge</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="HeadlineLabel" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="AutoSizeHeadlineLabel" parent="HeadlineLabel">
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="SecondaryLabel">
        <item name="android:textColor">@color/colorSecondaryLabel</item>
    </style>

    <style name="BodyLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SectionHeaderLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelMedium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="FooterLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelSmall</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SectionFooterLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelMedium</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="ResourceItemTitleLabel" parent="HeadlineLabel"/>

    <style name="ResourceItemContentLabel" parent="BodyLabel"/>

    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
    </style>

    <style name="TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:imeOptions">actionDone|flagNoExtractUi|flagNoFullscreen</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textColorHint">@color/colorSecondaryLabel</item>
    </style>

    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/colorLabel</item>
        <item name="theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme">
        <item name="colorControlNormal">@color/colorLabel</item>
    </style>

    <style name="BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="android:minHeight">60dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">10dp</item>
        <item name="itemActiveIndicatorStyle">@null</item>
    </style>

    <style name="Button" parent="Widget.Material3.Button">
    </style>

    <style name="BarSeparator">
        <item name="android:background">@color/colorSeparator</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="AppTheme" parent="@style/DefaultTheme">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorLabel</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorLabel</item>
        <item name="colorPrimaryContainer">@color/colorThemeBackground</item>
        <item name="colorOnPrimaryContainer">@color/colorLabel</item>
        <item name="colorOutline">@color/colorSecondaryLabel</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorBarBackground</item>
        <item name="colorOnSurface">@color/colorLabel</item>
        <item name="colorOnSurfaceVariant">@color/colorSecondaryLabel</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryThemeBackground</item>
        <item name="colorOnSecondaryContainer">@color/colorLabel</item>
    </style>
</resources>
