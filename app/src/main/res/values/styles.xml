<resources>
    <style name="DefaultThemeBase" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="DefaultTheme" parent="DefaultThemeBase"/>

    <style name="Container">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ListItem" parent="Container">
        <item name="android:background">@drawable/ripple_background</item>
    </style>

    <style name="ListItemGrouped" parent="Container">
        <item name="android:background">@drawable/ripple_grouped_background</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="BackgroundElevated">
        <item name="android:background">@color/colorBackgroundElevated</item>
    </style>

    <style name="SecondaryBackground">
        <item name="android:background">@color/colorSecondaryBackground</item>
    </style>

    <style name="SecondaryBackgroundElevated">
        <item name="android:background">@color/colorSecondaryBackgroundElevated</item>
    </style>

    <style name="ControlViewBackground">
        <item name="android:background">@drawable/control_view_background</item>
    </style>

    <style name="ButtonBackground">
        <item name="android:background">@drawable/ripple_button_background</item>
    </style>

    <style name="DimmingBackground">
        <item name="android:background">@color/colorDimmingBackground</item>
    </style>

    <style name="Separator">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:background">@color/colorSeparator</item>
    </style>

    <style name="Image">
        <item name="android:tint">@color/colorLabel</item>
    </style>

    <style name="SecondaryImage">
        <item name="android:tint">@color/colorSecondaryLabel</item>
    </style>

    <style name="Accessory">
        <item name="android:tint">@color/colorTertiaryLabel</item>
    </style>

    <style name="PrimaryLabel">
        <item name="android:textColor">@color/colorLabel</item>
    </style>

    <style name="ActionButtonLabel" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <style name="HelpText" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="LoadingText" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="CaptionText" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="PrimaryListItemLabel" parent="PrimaryLabel">
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SecondaryListItemLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">?attr/textAppearanceListItemSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="LargeTitleLabel" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="HeadlineLabel" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SecondaryLabel">
        <item name="android:textColor">@color/colorSecondaryLabel</item>
    </style>

    <style name="BodyLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SectionHeaderLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="FooterLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SectionFooterLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="ResourceItemTitleLabel" parent="HeadlineLabel"/>

    <style name="ResourceItemContentLabel" parent="BodyLabel"/>

    <style name="EditText" parent="PrimaryLabel">
        <item name="backgroundTint">@color/colorEditTextHairLine</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorBarBackground</item>
        <item name="titleTextColor">@color/colorLabel</item>
        <item name="theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme">
        <item name="colorControlNormal">@color/colorLabel</item>
    </style>

    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorBarBackground</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
    </style>

    <style name="BarSeparator">
        <item name="android:background">@color/colorSeparator</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="AppTheme" parent="@style/DefaultTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
