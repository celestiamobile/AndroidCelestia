<resources>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Container">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ListItem" parent="Container">
        <item name="android:background">@drawable/ripple_background</item>
    </style>

    <style name="ListItemGrouped" parent="Container">
        <item name="android:background">@drawable/ripple_grouped_background</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="SecondaryBackground">
        <item name="android:background">@color/colorSecondaryBackground</item>
    </style>

    <style name="ButtonBackground">
        <item name="android:background">@drawable/button_background_selector</item>
    </style>

    <style name="DimmingBackground">
        <item name="android:background">@color/colorDimmingBackground</item>
    </style>

    <style name="Separator">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:background">@color/colorSeparator</item>
    </style>

    <style name="ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@drawable/icon_tint_selector</item>
    </style>

    <style name="Image">
        <item name="android:tint">@color/colorLabel</item>
    </style>

    <style name="Accessory">
        <item name="android:tint">@color/colorTertiaryLabel</item>
    </style>

    <style name="PrimaryLabel">
        <item name="android:textColor">@color/colorLabel</item>
    </style>

    <style name="SecondaryLabel">
        <item name="android:textColor">@color/colorSecondaryLabel</item>
    </style>
    
    <style name="EditText" parent="PrimaryLabel">
        <item name="backgroundTint">@color/colorEditTextHairLine</item>
    </style>

    <style name="Toolbar" parent="SecondaryBackground">
        <item name="titleTextColor">@color/colorLabel</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
