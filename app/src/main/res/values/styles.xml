<resources>
    <style name="DefaultThemeBase" parent="@style/Theme.Material3.Dark.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="DefaultTheme" parent="DefaultThemeBase"/>

    <style name="Container">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ListItem" parent="Container">
        <item name="android:background">@drawable/ripple_background</item>
    </style>

    <style name="Background">
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Image">
        <item name="tint">?attr/colorOnBackground</item>
    </style>

    <style name="ImageOnTintedBackground">
        <item name="tint">?attr/colorOnSecondaryContainer</item>
    </style>

    <style name="SecondaryImage">
        <item name="tint">@color/material_on_background_emphasis_medium</item>
    </style>

    <style name="Accessory">
        <item name="tint">@color/material_on_background_disabled</item>
    </style>

    <style name="Card">
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">?android:attr/colorBackground</item>
    </style>

    <style name="LinkCard" parent="Card">
        <item name="android:clickable">true</item>
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">@dimen/link_card_corner_radius</item>
    </style>

    <style name="PrimaryLabel">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="HelpText" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="LoadingText" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
    </style>

    <style name="CaptionText" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="PrimaryListItemLabel" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SecondaryListItemLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="LargeTitleLabel" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineLarge</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="HeadlineLabel" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="AutoSizeHeadlineLabel" parent="HeadlineLabel">
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="SecondaryLabel">
        <item name="android:textColor">@color/material_on_background_emphasis_medium</item>
    </style>

    <style name="BodyLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SectionHeaderLabel" parent="SecondaryLabel">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelMedium</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="FooterLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelSmall</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SectionFooterLabel" parent="SecondaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelMedium</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="EmptyHint" parent="PrimaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
    </style>

    <style name="TextInputLayoutAutoComplete" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
    </style>

    <style name="TextInputEditTextBase" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:imeOptions">actionDone|flagNoExtractUi|flagNoFullscreen</item>
    </style>

    <style name="TextInputEditTextAutoCompleteBase" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:imeOptions">actionDone|flagNoExtractUi|flagNoFullscreen</item>
    </style>

    <style name="TextInputEditText" parent="TextInputEditTextBase"/>
    <style name="TextInputEditTextAutoComplete" parent="TextInputEditTextAutoCompleteBase"/>

    <style name="AppBar" parent="Widget.Material3.AppBarLayout"/>

    <style name="Toolbar" parent="Widget.Material3.Toolbar"/>
    <style name="SearchBar" parent="Widget.Material3.SearchBar"/>
    <style name="SearchView" parent="Widget.Material3.SearchView"/>

    <style name="BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="android:minHeight">@dimen/bottom_navigation_view_min_height</item>
        <item name="itemPaddingTop">@dimen/bottom_navigation_view_item_padding_top</item>
        <item name="itemPaddingBottom">@dimen/bottom_navigation_view_item_padding_bottom</item>
    </style>

    <style name="Button" parent="Widget.Material3.Button.TonalButton">
    </style>

    <style name="AppTheme" parent="DefaultTheme">
        <item name="android:colorBackground">#1b1b1f</item>
        <item name="colorOnBackground">#e3e2e6</item>
        <item name="colorPrimary">#adc7ff</item>
        <item name="colorOnPrimary">#0f2f60</item>
        <item name="colorPrimaryContainer">#2a4678</item>
        <item name="colorOnPrimaryContainer">#d8e2ff</item>
        <item name="colorSecondary">#bfc6dc</item>
        <item name="colorOnSecondary">#283041</item>
        <item name="colorSecondaryContainer">#3f4759</item>
        <item name="colorOnSecondaryContainer">#dbe2f9</item>
        <item name="colorOutline">#8e9099</item>
        <item name="colorSurface">#1b1b1f</item>
        <item name="colorSurfaceVariant">#44474f</item>
        <item name="colorOnSurface">#e3e2e6</item>
        <item name="colorOnSurfaceVariant">#c4c6d0</item>
    </style>
</resources>
