<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loading.LoadingFragment"
    style="@style/Background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/common_page_medium_margin_horizontal"
        android:layout_gravity="center"
        style="@style/Container">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/app_icon_dimension"
            android:layout_height="@dimen/app_icon_dimension"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/loading_icon"/>

        <TextView
            android:id="@+id/loading_label"
            android:layout_marginTop="@dimen/loading_gap_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            style="@style/LoadingText"/>

    </LinearLayout>

</FrameLayout>