<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/tutorial_list_icon_dimension"
        android:layout_height="@dimen/tutorial_list_icon_dimension"
        android:layout_marginStart="@dimen/list_item_margin_horizontal"
        android:layout_marginVertical="@dimen/list_item_margin_vertical"
        style="@style/Image"/>

    <TextView
        android:id="@+id/description"
        style="@style/HelpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/list_item_margin_vertical"
        android:layout_marginStart="@dimen/tutorial_list_item_gap_horizontal"
        android:layout_marginEnd="@dimen/list_item_margin_horizontal" />
</LinearLayout>
