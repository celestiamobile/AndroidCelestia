<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="@style/ListItemGrouped">

    <TextView
        android:id="@+id/title"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/list_item_medium_margin_horizontal"
        android:layout_marginEnd="@dimen/list_item_gap_horizontal"
        android:layout_marginVertical="@dimen/list_item_medium_margin_vertical"
        style="@style/PrimaryListItemLabel" />

    <space.celestia.mobilecelestia.common.StepperView
        android:id="@+id/stepper"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_item_medium_margin_horizontal"/>
</LinearLayout>
