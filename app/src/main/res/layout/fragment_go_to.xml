<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    style="@style/Background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/common_section_header"
            android:id="@+id/object_name_section_header"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="@dimen/list_item_medium_margin_horizontal"
            android:layout_marginVertical="@dimen/list_item_small_margin_vertical"
            style="@style/TextInputLayoutAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/object_name_text_view"
                style="@style/TextInputEditTextAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <include
            layout="@layout/common_section_header"
            android:id="@+id/coordinate_section_header"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/list_item_medium_margin_horizontal"
            android:layout_marginVertical="@dimen/list_item_small_margin_vertical"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:id="@+id/longitude_text_container"
                style="@style/TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/longitude_text_view"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:id="@+id/latitude_text_container"
                android:layout_marginStart="@dimen/list_item_gap_horizontal"
                style="@style/TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/latitude_text_view"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <include
            layout="@layout/common_section_header"
            android:id="@+id/distance_section_header"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/list_item_medium_margin_horizontal"
            android:layout_marginVertical="@dimen/list_item_small_margin_vertical"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/distance_text_view"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginStart="@dimen/list_item_gap_horizontal"
                style="@style/TextInputLayoutAutoComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/unit_text_view"
                    style="@style/TextInputEditTextAutoComplete"
                    android:inputType="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_spacing_short"/>
        <Button
            android:id="@+id/go_to_button"
            style="@style/Button"
            android:layout_marginTop="@dimen/common_page_medium_gap_vertical"
            android:layout_marginHorizontal="@dimen/common_page_medium_margin_horizontal"
            android:layout_marginBottom="@dimen/common_page_medium_margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>